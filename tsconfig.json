{
    "extends": "@tsconfig/node12/tsconfig.json",
    "compilerOptions": {
        "alwaysStrict": true,
        "incremental": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitOverride": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "outDir": "build",
        "typeRoots": ["./node_modules/@types", "./typings"]
    },
    "include": [
        "src",
        "typings"
    ]
}
